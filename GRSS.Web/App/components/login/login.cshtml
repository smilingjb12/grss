<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h2>Log in</h2>
            <div class="panel panel-default">
                <div class="panel-body">
                    <form role="form" novalidate ng-submit="vm.login()">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input class="form-control" placeholder="Email" id="email" type="email" autofocus
                                   ng-model="vm.loginData.userName" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input class="form-control" placeholder="Password" id="password" type="password"
                                   ng-model="vm.loginData.password" />
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" value="Remember me" ng-model="vm.loginData.rememberMe" />
                                Remember me
                            </label>
                        </div>
                        <input type="submit" class="btn btn-primary btn-login" value="LOG IN" />
                    </form>
                </div>
            </div>
        </div>
    </div> 
</div>
